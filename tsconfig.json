{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "lib/",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node", "jest"]
	},
	"include": ["src"],
	"exclude": ["**/*.spec.ts"]
}
